<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Career Path Recommender</title>
    <!-- Bootswatch Flatly Theme -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/flatly/bootstrap.min.css" />
    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
   
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor"
                        class="bi bi-bar-chart-fill me-2" viewBox="0 0 16 16">
                        <path d="M1 13.5V16h14v-2.5a.5.5 0 0 0-.5-.5h-13a.5.5 0 0 0-.5.5zM2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v3H2v-3zm4-5a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v8H6V5zm4 3a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v5h-3V8z" />
                    </svg>
                    Career Path Recommender
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Employee"
                                asp-action="ManageSkills">Manage Skills</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Recommendation"
                                   asp-action="Index">Recommendation</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item">
                            <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger text-white">Logout</button>
                            </form>
                        </li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Register">Register
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-light mt-5 py-3 shadow-sm">
        <div class="container text-center">
            &copy; 2025 - Career Path Recommender - Mahmoud Abdelaal
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
