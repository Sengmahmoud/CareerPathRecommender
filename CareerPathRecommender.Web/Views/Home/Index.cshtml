@model CareerPathRecommender.Web.Models.Employee

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                 
                  
                </div>
                <div class="card-body">
                    <div>
                        <h4>Personal Information</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                Full Name
                            </dt>
                            <dd class="col-sm-10">
                                @Model.FullName
                            </dd>
                            <dt class="col-sm-2">
                                Email
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Email
                            </dd>
                            <dt class="col-sm-3">
                                Phone Number
                            </dt>
                            <dd class="col-sm-9">
                                @Model.PhoneNumber
                            </dd>
                            <dt class="col-sm-3">
                                Current Job Role
                            </dt>
                            <dd class="col-sm-9">
                                @Model.JobRole?.Title
                            </dd>
                        </dl>
                    </div>

                    <div>
                        <h4>Skills</h4>
                        <hr />
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Skill Name</th>
                                    <th>Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var skill in Model.EmployeeSkills ?? Enumerable.Empty<EmployeeSkill>())
                                {
                                    <tr>
                                        <td>@skill.Skill.Name</td>
                                        <td>@skill.Level</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
